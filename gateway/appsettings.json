{
  "Jwt": { "Key": "dev-secret" },
  "ReverseProxy": {
    "Routes": {
      "inventory": {
        "ClusterId": "inventory",
        "Match": { "Path": "/inventory/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/inventory" }
        ]
      },
      "sales": {
        "ClusterId": "sales",
        "Match": { "Path": "/sales/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/sales" }
        ]
      }
    },
    "Clusters": {
      "inventory": { "Destinations": { "d1": { "Address": "http://localhost:5001/" } } },
      "sales":     { "Destinations": { "d1": { "Address": "http://localhost:5002/" } } }
    }
  }
}
